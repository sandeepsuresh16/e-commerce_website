    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function deleteProduct(wishlistId, proId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        url: '/delete-wishlist-product',
                        method: 'post',
                        data: {
                            cartId: wishlistId,
                            proId: proId
                        },
                        success: (response) => {
                            Swal.fire({
                                icon: 'success',
                                title: 'Product Successfully removed from wishlist'
                            }).then(() => {
                                location.reload()
                            })

                        }
                    })
                }
            })
        }

        function addToCart(proId) {

            $.ajax({
                url: "/addToCart/" + proId,
                method: 'get',
                success: (response) => {
                    document.getElementById('cartCount').innerHTML = response
                    Swal.fire('Added to cart')
                }
            })
        }
    </script>
