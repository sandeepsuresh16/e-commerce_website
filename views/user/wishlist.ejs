                        <li>Wishlist</li>
                    </ul>
                </div>
            </nav>
            <!-- End of Breadcrumb -->

            <!-- Start of PageContent -->
            <div class="page-content" style="min-height: 70vh;">
                <div class="container">
                    <%if(wishlistItem.length>0){%>
                        <h3 class="wishlist-title">My wishlist</h3>
                        <table class="shop-table wishlist-table">
                            <thead>
                                <tr>
                                    <th class="product-name text-right"><span>Product</span></th>
                                    <th></th>
                                    <th class="product-price text-left"><span>Price</span></th>
                                    <th class="product-stock-status text-left"><span>Stock Status</span></th>
                                    <th class="wishlist-action text-left">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(var i=0; i<wishlistItem.length; i++){%>
                                    <tr>
                                        <td class="product-thumbnail">
                                            <div class="p-relative">
                                                <a href="">
                                                    <figure>
                                                        <img src="/product-image/<%=wishlistItem[i].item%>_1.jpg"
                                                            alt="product" width="300" height="338">
                                                    </figure>
                                                </a>
                                                <button type="submit" class="btn btn-close"
                                                    onclick="deleteProduct('<%=wishlistItem[i]._id%>','<%=wishlistItem[i].product._id%>')"><i
                                                        class="fas fa-times"></i></button>
                                            </div>
                                        </td>
                                        <td class="product-name">
                                            <%=wishlistItem[i].product.productName%>
                                        </td>
                                        <td class="product-price">
                                            <%if(wishlistItem[i].product.discount>0 ||
                                                wishlistItem[i].product.catDiscount>0){%>
                                                <%if(wishlistItem[i].product.discount>
                                                    wishlistItem[i].product.catDiscount){%>
                                                    <span class="new-price" style="color: green;">
                                                        <%=Math.round(wishlistItem[i].product.price*.01*(100-wishlistItem[i].product.discount))%>
                                                    </span><span><del><ins class="new-price">(Rs.
                                                                <%=wishlistItem[i].product.price%>)
                                                            </ins></del></span>
                                                    <%}else{%>
                                                        <span class="new-price" style="color: green;">Rs.
                                                            <%=Math.round(wishlistItem[i].product.price*.01*(100-wishlistItem[i].product.catDiscount))%>
                                                        </span><span><del><ins class="new-price">(Rs.
                                                                    <%=wishlistItem[i].product.price%>
                                                                        )
                                                                </ins></del></span>
                                                        <%}%>
                                                            <%}else{%>
                                                                <ins class="new-price">Rs.
                                                                    <%=wishlistItem[i].product.price%>
                                                                </ins>
                                                                <%}%>
                                        </td>
                                        <td class="product-stock-status">
                                            <%if(wishlistItem[i].product.inStock){%>
                                                <span class="wishlist-in-stock">In Stock</span>
                                                <%}%>
                                                    <%if(!wishlistItem[i].product.inStock){%>
                                                        <span class="text-danger">Out of Stock</span>
                                                        <%}%>
                                        </td>
                                        <td class="wishlist-action">
                                            <div class="d-lg-flex">
                                                <a href="/buy-now/<%=wishlistItem[i].product._id%>"
                                                    class="btn btn-dark btn-rounded btn-sm ml-lg-2">Buy Now</a>

                                                <span class="btn btn-dark btn-rounded btn-sm ml-lg-2" onclick="addToCart('<%=wishlistItem[i].product._id%>')">Add to Cart</span>
                                            </div>
                                        </td>
                                    </tr>
                                    <%}%>
                            </tbody>
                        </table>
                        <%}%>
                            <%if(wishlistItem.length==0){%>
