                  </div> -->
            <!--products search bar-->
            <div class="col-12 mt-5 mb-2 p-2 d-flex justify-content-between bg-light shadow p-3 mb-1 bg-body">
              <div class="d-inline"><a><button class="btn btn-primary"> Manager -Category</button></a></div>
              <div class="d-inline d-flex">
                <form class="d-flex" action="/admin/searchCategory" method="post">
