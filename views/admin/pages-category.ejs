                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>
            </div>
            <!--list products-->
            <div class="col-12 bg-light shadow p-3 mb-5 bg-body">
              <div>
                <table class="table table-striped shadow p-3 mb-5 bg-body">
                  <thead>
                    <tr>
                      <th scope="col">Category Name</th>
                      <th scope="col">Status</th>
                      <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <% for(var i=0; i<data.length; i++){ %>
                    <tbody>
                      <tr>
                        <td>
                          <%=data[i].categoryName%>
                        </td>
                        <%if(data[i].isActive){%>
                          <td class="text-success">Active</td>
                          <%}%>
                            <%if(!data[i].isActive){%>
                              <td class="text-danger">Inactive</td>
                              <%}%>
                                <td><button class="btn badge bg-success open-AddBookDialog" data-bs-toggle="modal"
                                    data-bs-target="#exampleModal" data-val="<%=data[i].categoryName%>">Edit</button>
                                </td>
                                <td><a href="/admin/category/subCategory/<%=data[i]._id%>"><button
                                      class="btn badge bg-success">
                                      <i class="fas fa-plus"></i>SubCategory
                                    </button></a></td>
                                    <td><i class="fas fa-trash" style="cursor: pointer;" onclick="return confirmDelete('<%=data[i]._id%>','<%=data[i].categoryName%>')"></i></td>
                      </tr>
                    </tbody>
                    <%}%>
                </table>
              </div>
            </div>
          </div>
        </div>
        <div class="col-3 mt-5 ms-2 p-2 shadow p-3 mb-5 bg-body">
          <div class="row">
            <div class="col-12 ps-4 mb-2  bg-light">
