                <div class="row shadow p-3 mb- bg-body">
                  <div class="col-12 ">
                    <label for="form-label">Category Name</label><br>
                    <input style="width: 100%;" type="text" id="category" name="category" required>
                  </div>
                  <div class="mt-3">
                    <label for="status">Active</label>
                    <input type="radio" name="status" value="true" checked>
                    <label for="status">InActive</label>
                    <input type="radio" name="status" value="false">
                  </div>
                  <div class="mt-3">
                    <button class="btn btn-success">Add</button>
                  </div>
                </div>
              </form>
            </div>
