<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    
    <style>
        * {box-sizing: border-box;}
        body {background-image: url('/background.jpg');}
    </style>
    <title>Hello, world!</title>
</head>

<body>
    <!--navabr-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="#">User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/order">Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Offer</a>
                    </li>
                </ul>
                <form class="d-flex" method="get" action="/admin/logout">

                    <button class="btn btn-outline-success" type="submit">Logout</button>
                </form>
            </div>
        </div>

    </nav>
    <!-- Optional JavaScript; choose one of the two! -->
    <div class="container">
        <div class="row">
            <div class="col-12 mb-1 mt-2 p-2">
                <h4 style="color: #fff;">Manager Users</h4>
            </div>
            <!--products search bar-->
            <div class="col-12 mb-2 p-2 d-flex justify-content-end bg-light shadow p-3 mb-1 bg-body rounded">
                <!-- <div class="d-inline"><a><button class="btn btn-primary"> </button></a></div> -->
                <div class="d-inline d-flex">
                    <form class="d-flex" action="/admin/searchUser" method="post">
                        <input class="form-control me-2" type="search" placeholder="Search User" aria-label="Search" name="search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
            <!--list users-->
            <div class="col-12 bg-light shadow p-3 mb-5 bg-body rounded">
                <div class="table-responsive-md">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                              <th scope="col">User Name</th>
                              <th scope="col">email-ID</th>
                              <th scope="col">Phone</th>
                            </tr>
                          </thead>
                          <%for(var i=0;i<users.length;i++){%>
                        <tbody>
                          <tr>
                            <td><%=users[i].name%></td>
                            <td><%=users[i].email%></td>
                            <td><%=users[i].phone%></td>
                            <% if(users[i].isActive){%>
                            <td><a href="/admin/user/block/<%=users[i]._id%>"><button class="btn btn-danger btn-sm">Block</button></a></td>
                            <%}%>
                            <% if(!users[i].isActive){%>
                            <td><a href="/admin/user/unblock/<%=users[i]._id%>"><button class="btn btn-warning btn-sm">Unblock</button></a></td>
                            <%}%>
                            <!-- <td><a href="/admin/user/delete/<%=users[i]._id%>" onclick="return confirm('Are you sure!')"><i class="fas fa-trash"></i></a></td> -->
                          </tr>
                        </tbody>
                        <%}%>
                      </table>
                </div>
            </div>
        </div>

    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>



</body>

</html>