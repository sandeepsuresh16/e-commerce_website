  <script>
    function confirmDelete(catId,subName,catName){
      Swal.fire({
        title: 'Are you sure?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
      }).then((result) => {
        if (result.isConfirmed) {
          location.href=`/admin/category/subCategory/delete/${catId}/${subName}/${catName}`
        }else{
          return false
        }
      })
    }
