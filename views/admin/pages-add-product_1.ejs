  <script>
    function imageChange(event,no) {
        var fileInput = 
            document.getElementById('file'+no);
          
        var filePath = fileInput.value;
      
        // Allowing file type
        var allowedExtensions = 
                /(\.jpg|\.jpeg|\.png|\.gif)$/i;
          
        if (!allowedExtensions.exec(filePath)) {
            Swal.fire('Invalid input format')
            fileInput.value = '';
            return false;
        } 
        else 
        {
            document.getElementById('imageView'+no).src=URL.createObjectURL(event.target.files[0])
        }
    }
    
</script>

<script>
    function getCat() {
        let category = $('#category').val()

        $.ajax({
            url: '/admin/getSubCategory',
            method: "post",
            data: { category: category },
            success: (data) => {
                console.log('data in ajax:', data);
                $('#subcategory').find('option').remove()

                for (var i = 0; i < data.length; i++) {
                    $('#subcategory').append('<option>' + data[i] + '</option>')
                }
            }
        })
    }
  </script>
  <script>
    function validateForm(){
            let productName = document.getElementById('productName').value.trim()
            let brand = document.getElementById('brand').value.trim()
            let category = document.getElementById('category').value.trim()
            let subcategory = document.getElementById('subcategory').value.trim()
            let description = document.getElementById('description').value.trim()
            let price = document.getElementById('price').value.trim()
            let quantity = document.getElementById('quantity').value.trim()
            let file1 = document.getElementById('file1').value
            let file2 = document.getElementById('file2').value
            let file3 = document.getElementById('file3').value
            let file4 = document.getElementById('file4').value

            if(isNaN(quantity)){
                document.getElementById('quantity').style.border="3px solid red"
                return false
            }else if((isNaN(price))||(price<1)){
                document.getElementById('price').style.border="3px solid red"
                return false
            }else if(category=='select'){
                document.getElementById('category').style.border="3px solid red"
                return false
            }else if(subcategory=='select'){
                document.getElementById('subcategory').style.border="3px solid red"
                return false
            }else if(brand.length<3){
                document.getElementById('brand').style.border="3px solid red"
                return false
            }else if(productName.length<3){
                document.getElementById('productName').style.border="3px solid red"
                return false
            }else if(description.length<5){
                document.getElementById('description').style.border="3px solid red"
                return false
            }else if(!file1){
                document.getElementById('file1').style.border="3px solid red"
                return false
            }else if(!file2){
                document.getElementById('file2').style.border="3px solid red"
                return false
            }else if(!file3){
                document.getElementById('file3').style.border="3px solid red"
                return false
            }else if(!file4){
                document.getElementById('file4').style.border="3px solid red"
                return false
            }else
                return true
                            
        }
  </script>

  
