<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link rel="stylesheet" href="style.css">
    <style>
        * {box-sizing: border-box;}
        body {background-image: url('/background.jpg');}
    </style>
    <title>Hello, world!</title>
</head>

<body>
    <!--navabr-->
    <div class="container pt-5 pb-5">
        <div class="row justify-content-center pt-5 pb-5">
            <div class="col-md-4 border border-1 shadow p-3 mb-5 bg-body rounded">
                <form action="/admin/signin" method="post">
                    <div class="container pt-5 pb-5">
                        <div class="row text-center">
                            <h3>Admin Login</h3>
                        </div>
                        <div class="mt-2">
                            <%if(error){%>
                                <h4 style="color: red;">Invalid Credentials</h4>
                            <%}%>
                        </div>
                        <div class="row mt-5 mb-3">
                            <div ><label for="email">Username</label><br>
                                <input style="width: 100%;size: 1.2rem" type="email" id="email" name="email" class="p-2" minlength="2">
                            </div>
                        </div>
                        <div class="row mt-2 mb-3">
                            <div ><label for="password">password</label><br>
                                <input style="width: 100%;" type="password" id="password" name="password" class="p-2" minlength="5">
                            </div>
                        </div>
                        <div class="row mt-4 mb-3 justify-content-center">
                            <div class="col-5" >
                                <button style="width: 100%;" type="submit" class="btn btn-primary">login</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>



</body>

</html>