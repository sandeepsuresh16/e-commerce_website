<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    
    <style>
        * {box-sizing: border-box;}
        body {background-image: url('/background.jpg');}
    </style>
    <title>Hello, world!</title>
</head>

<body>
    <!--navabr-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/user">User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/products">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/category">Category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/admin/order">Order</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Offer</a>
                    </li>
                </ul>
                <form class="d-flex" method="get" action="/admin/logout">

                    <button class="btn btn-outline-success" type="submit">Logout</button>
                </form>
            </div>
        </div>

    </nav>
    <!-- Optional JavaScript; choose one of the two! -->
    <div class="container mt-4">
        <div class="row justify-content-center mb-4">
            <div class="col-6 justify-content-center text-center">
                <h3 style="color: #fff;">Order Details</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-12 bg-light shadow p-3 mb-5 bg-body rounded">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Order-ID</th>
                            <th scope="col">Order-Date</th>
                            <th scope="col">Delivary Address</th>
                            <th scope="col">Order-Status</th>
                            <th scope="col">Order-Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(var i=0; i<1; i++){%>
                            <tr>
                                <td><%=order[i]._id%></td>
                                <td><%=order[i].date%></td>
                                <td>
                                    <%=order[i].delivaryDetails.name%><br>
                                    <%=order[i].delivaryDetails.phone%><br>
                                    <%=order[i].delivaryDetails.address%><br>
                                    <%=order[i].delivaryDetails.pincode%><br>
                                </td>
                                <td><%=order[i].status%></td>
                                <td><%=order[i].totalAmount%></td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-12 bg-light shadow p-3 mb-5 bg-body rounded">
                <table class="table table-striped">
                    <tbody>
                        <%for(var i=0; i<order.length; i++){%>
                            <tr>
                                <td style="width:20%;">
                                    <img src="/product-image/<%=order[i].item%>_1.jpg" alt="" width="auto" height="100px">
                                </td>
                                <td>
                                    <b><%=order[i].product.productName%></b><br>
                                    <%=order[i].product.brand%><br>
                                    <%=order[i].product.category%><br>
                                    <%=order[i].product.subCategory%><br>
                                    <%=order[i].quantity%><br>
                                </td>
                            </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        function getStatus(orderId) {
            let status= $('#status').val()

            $.ajax({
                url: '/admin/order/change-status',
                method: "post",
                data: { status: status,orderId:orderId },
                success: (response) => {
                    location.reload()
                    }
            })
        }

        
    </script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>



</body>

</html>